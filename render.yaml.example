services:
  - type: web
    name: aquabill-api
    env: docker
    plan: free
    dockerfilePath: ./Dockerfile
    autoDeploy: true
    healthCheckPath: /api/v1/health
    envVars:
      - key: AQUABILL_DATABASE_URL
        sync: false
      - key: AQUABILL_SMS_GATEWAY_URL
        sync: false
      - key: AQUABILL_SMS_API_KEY
        sync: false
      - key: AQUABILL_SUBMISSION_WINDOW_DAYS
        value: "5"
